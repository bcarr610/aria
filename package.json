{
  "name": "aria-thermostat",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:thermostat": "cross-env NODE_ENV=remote nodemon -q --config ./nodemon/nodemon.config.dev.json ./src/apps/thermostat/index.ts",
    "dev:hub": "cross-env NODE_ENV=remote nodemon -q --config ./nodemon/nodemon.config.dev.json ./src/apps/hub/index.ts",
    "start:hub": "cross-env NODE_ENV=production nodemon -q --config ./nodemon/nodemon.config.prod.json ./build/index.js",
    "build": "npm-run-all build:*",
    "build:hub": "esbuild src/apps/hub/index.ts --bundle --platform=node --outfile=build/hub.js",
    "build:thermostat": "esbuild src/apps/thermostat/index.ts --bundle --platform=node --outfile=build/thermostat.js"
  },
  "author": "Brandon Carr",
  "license": "ISC",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.25",
    "@types/node-dht-sensor": "^0.4.2",
    "@types/swagger-ui-express": "^4.1.6",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "express": "^4.18.3",
    "node-dht-sensor": "^0.4.3",
    "nodemon": "^3.1.0",
    "onoff": "^6.0.3",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "systeminformation": "^5.22.6"
  }
}
