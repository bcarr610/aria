{
  "compilerOptions": {
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2016",
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "src/@types/**/*.d.ts"],
    "types": ["node", "jest"],
    "strict": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./coverage", "jest.config.js", "*.spec.ts"]
}
